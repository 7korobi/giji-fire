{
  "name": "giji-fire",
  "version": "1.0.0",
  "description": "人狼議事",
  "author": "7korobi@gmail.com",
  "private": true,
  "scripts": {
    "test": "run-s test:webpack jest",
    "test:webpack": "webpack --config config/webpack/index-spec.coffee",
    "jest": "jest",
    "dev": "nuxt",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",
    "generate": "run-p generate:*",
    "generate:nuxt": "nuxt generate",
    "copy": "run-s copy_all copy_dist",
    "copy_all": "run-p -n copy:*",
    "copy_dist": "cp -ru static/* dist/",
    "copy:stylus": "ls styl/*.styl.use | xargs stylus --compress --out static/css/",
    "copy:portrate": "cp -u /c/Dropbox/*/web_work/images/portrate/* static/images/portrate/.",
    "copy:monaco": "rm -rf static/lib/monaco-editor/min && cp -r node_modules/monaco-editor/min static/lib/monaco-editor/.",
    "copy:func": "webpack --config config/webpack/index-functions.coffee",
    "copy:sow": "webpack --config config/webpack/index-sow.coffee",
    "deploy": "run-s generate:nuxt deploy:test",
    "deploy:test": "run-p -n deploy:host deploy:aws",
    "deploy:live": "run-p -n deploy:rsync deploy:aws",
    "deploy:styl": "run-s copy:stylus copy_dist deploy:test",
    "deploy:sow": "run-s copy:sow copy_dist deploy:test",
    "deploy:img": "run-s copy:portrate copy_dist deploy:test",
    "deploy:copy": "run-s copy copy_dist",
    "deploy:aws_img": "aws s3 sync dist/images s3://giji-assets/images --acl public-read --exclude '*.html'",
    "deploy:aws": "aws s3 sync dist s3://giji-assets/fire --acl public-read --exclude '*.html'",
    "deploy:rsync": "rsync -avz dist 7korobi@giji.f5.si:/home/7korobi/giji-fire/.",
    "deploy:all": "firebase deploy",
    "deploy:host": "firebase deploy --only hosting",
    "deploy:func": "firebase deploy --only functions",
    "install": "run-p -n copy:*",
    "install:global-msys": "pacman -S openssh rsync",
    "install:global-npm": "npm install -g aws-sdk firebase-tools"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "."
    ]
  },
  "dependencies": {
    "@nuxtjs/pwa": "^2.5.0",
    "coffee-loader": "^0.9.0",
    "coffeescript": "2.2.4",
    "config": "^1.30.0",
    "date-fns": "^1.29.0",
    "firebase": "^5.5.0",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "lodash": "^4.17.11",
    "marked-pre": "^0.0.54",
    "marked-pre-loader": "^0.0.2",
    "monaco-editor": "^0.13.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "nuxt": "^1.4.2",
    "pug": "^2.0.3",
    "pug-html-loader": "^1.1.5",
    "sass-loader": "^7.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "tiny-cookie": "^2.1.2",
    "vue-markup": "^0.0.50",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "yaml-loader": "^0.5.0"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.19",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0",
    "jest": "^23.1.0",
    "mini-css-extract-plugin": "^0.4.1",
    "vue-test-utils": "^1.0.0-beta.11"
  }
}
