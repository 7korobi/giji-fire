{
  "name": "giji-fire",
  "version": "1.0.0",
  "description": "人狼議事",
  "author": "7korobi@gmail.com",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "jest": "jest -u",
    "test": "run-s jest",
    "precommit": "yarn",
    "generate": "run-p generate:*",
    "generate:nuxt": "nuxt generate",
    "copy": "run-s copy_all copy_dist",
    "copy_all": "run-p -n copy:*",
    "copy_dist": "cp -r static/* dist/",
    "copy:stylus": "ls styl/*.styl.use | xargs stylus --compress --out static/css/",
    "copy:portrate": "cp  ../../*/web_work/images/portrate/* static/images/portrate/.",
    "copy:quill": "cp node_modules/quill/dist/*.css node_modules/quill/dist/quill*.min.js* node_modules/quill-*/*.min.js* static/lib/quill/.",
    "copy:func": "webpack --config config/webpack/index-functions.coffee",
    "-copy:sow": "webpack --config config/webpack/index-sow.coffee",
    "deploy": "run-s generate:nuxt deploy:test",
    "deploy:test": "run-p -n deploy:host deploy:aws",
    "deploy:live": "run-p -n deploy:rsync deploy:aws",
    "deploy:styl": "run-s copy:stylus copy_dist deploy:test",
    "deploy:sow": "run-s copy:sow copy_dist deploy:test",
    "deploy:img": "run-s copy:portrate copy_dist deploy:test",
    "deploy:copy": "run-s copy copy_dist",
    "deploy:aws_img": "aws s3 sync dist/images s3://giji-assets/images --acl public-read --exclude '*.html'",
    "deploy:aws": "aws s3 sync dist s3://giji-assets/fire --acl public-read --exclude '*.html'",
    "deploy:rsync": "rsync -avz dist 7korobi@giji.f5.si:/home/7korobi/giji-fire/.",
    "deploy:all": "firebase deploy",
    "deploy:host": "firebase deploy --only hosting",
    "deploy:func": "firebase deploy --only functions",
    "install": "run-p -n copy:*",
    "install:global-msys": "pacman -S openssh rsync",
    "install:global-npm": "npm install -g aws-sdk firebase-tools"
  },
  "jest": {
    "preset": "jest-preset-coffeescript",
    "moduleFileExtensions": [
      "coffee",
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1",
      "^@/(.*)$": "<rootDir>/$1"
    },
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    }
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@nuxtjs/babel-preset-app": "^0.8.0",
    "@nuxtjs/pwa": "^2.5.0",
    "coffee-loader": "^0.9.0",
    "coffeescript": "^2.3.2",
    "config": "^2.0.1",
    "cross-env": "^5.2.0",
    "date-fns": "^1.29.0",
    "firebase": "^5.5.8",
    "firebase-admin": "^6.1.0",
    "firebase-functions": "^2.1.0",
    "json-loader": "^0.5.7",
    "localforage": "^1.7.3",
    "lodash": "^4.17.11",
    "memory-orm": "^0.1.9",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "nuxt": "^2.3.4",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "quill": "^1.3.6",
    "quill-autoformat": "^0.1.0",
    "quill-image-drop-module": "^1.0.3",
    "quill-image-resize-module": "^3.0.0",
    "quill-magic-url": "^1.0.0",
    "quill-mention": "^2.0.6",
    "sass-loader": "^7.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "terser-webpack-plugin": "^1.1.0",
    "tiny-cookie": "^2.2.0",
    "vue-markup": "^0.0.56",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "yaml-loader": "^0.5.0"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-jest": "^23.6.0",
    "comlink": "^3.0.3",
    "comlink-loader": "^1.1.0",
    "jest": "^23.6.0",
    "jest-preset-coffeescript": "^1.0.0",
    "mini-css-extract-plugin": "^0.4.4",
    "nodemon": "^1.11.0",
    "shared-worker-loader": "^0.2.0",
    "vue-jest": "^3.0.0",
    "webpack-cli": "^3.1.2"
  }
}
