{
  "name": "giji-fire",
  "version": "1.0.0",
  "description": "人狼議事",
  "author": "7korobi@gmail.com",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint",

    "generate": "run-s generate:nuxt stylus",
    "generate:nuxt": "nuxt generate",

    "copy": "run-p -n copy:*",
    "copy_dist": "cp -r static/* dist/",
    "copy:stylus": "ls styl/*.styl.use | xargs stylus --compress --out static/css/",
    "copy:portrate": "cp \"../../人狼議事 チーム フォルダ/web_work/images/portrate\"/* static/images/portrate/.",
    "copy:monaco":   "rm -rf static/lib/monaco-editor/min && cp -r node_modules/monaco-editor/min static/lib/monaco-editor/.",

    "deploy": "run-s generate:nuxt deploy:hosting",
    "deploy:copy": "run-s copy copy_dist deploy:hosting",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:all": "firebase deploy"
  },
  "dependencies": {
    "coffee-loader": "^0.9.0",
    "coffeescript": "^2.2.3",
    "config": "^1.30.0",
    "firebase": "^4.12.1",
    "lodash": "^4.17.5",
    "marked-pre": "^0.0.22",
    "marked-pre-loader": "^0.0.2",
    "mermaid": "^8.0.0-rc.6",
    "moment": "^2.21.0",
    "monaco-editor": "^0.11.1",
    "npm-run-all": "^4.1.2",
    "nuxt": "^1.4.0",
    "pug": "^2.0.3",
    "pug-html-loader": "^1.1.5",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "tiny-cookie": "^2.1.1",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "yaml-loader": "^0.5.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0"
  }
}
