{
  "name": "giji-fire",
  "version": "1.0.0",
  "description": "人狼議事",
  "author": "7korobi@gmail.com",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "jest": "jest -u --config config/jest.js --rootDir .",
    "test": "run-s jest",
    "func": "run-s copy:func deploy:func",
    "precommit": "yarn",
    "generate": "run-p generate:*",
    "generate:nuxt": "nuxt generate",
    "copy": "run-s copy_all dist:copy",
    "copy_all": "run-p -n copy:*",
    "copy:stylus": "ls styl/*.styl.use | xargs stylus --compress --out static/css/",
    "copy:portrate": "cp -u ../../*/web_work/images/portrate/* static/images/portrate/.",
    "copy:func": "webpack --config config/webpack/index-functions.coffee",
    "-copy:sow": "webpack --config config/webpack/index-sow.coffee",
    "dist:copy": "cp -ru static/* dist/",
    "dist:brotli": "find dist -type f -not -name \"*.br\" | grep -v \"dist/font\" | xargs -L1  brotli -Z -f -k",
    "deploy": "run-s generate:nuxt deploy:test backup",
    "deploy:test": "run-p -n deploy:host deploy:aws",
    "deploy:live": "run-s -n dist:brotli deploy:rsync deploy:aws",
    "deploy:styl": "run-s copy:stylus dist:copy deploy:test",
    "deploy:sow": "run-s copy:sow dist:copy deploy:test",
    "deploy:img": "run-s copy:portrate dist:copy deploy:test",
    "deploy:copy": "run-s copy dist:copy",
    "deploy:aws_img": "aws s3 sync dist/images s3://giji-assets/images --acl public-read --exclude '*.html'",
    "deploy:aws": "aws s3 sync dist s3://giji-assets/fire --acl public-read --exclude '*.html'",
    "deploy:rsync": "rsync -avz -e 'ssh -i ../.ssh/id_rsa' dist 7korobi@giji.f5.si:/home/7korobi/giji-fire/.",
    "deploy:all": "firebase deploy",
    "deploy:host": "firebase deploy --only hosting",
    "deploy:func": "firebase deploy --only functions",
    "backup": "run-p -n backup:*",
    "backup:rsync": "rsync -avz -e 'ssh -i ../.ssh/id_rsa' 7korobi@giji.f5.si:/home/7korobi/*.zip config/.",
    "g": "run-p -n g:*",
    "g:msys": "pacman -S openssh rsync",
    "g:npm": "npm install -g aws-sdk firebase-tools npm-check-updates typesync"
  },
  "dependencies": {
    "@nuxtjs/google-analytics": "^2.2.0",
    "@nuxtjs/pwa": "^2.6.0",
    "animejs": "^3.0.1",
    "comlink": "^3.2.0",
    "cross-env": "^5.2.0",
    "date-fns": "^1.30.1",
    "fast-diff": "^1.2.0",
    "firebase": "^5.9.3",
    "firebase-admin": "^7.2.0",
    "firebase-functions": "^2.2.1",
    "lodash": "^4.17.11",
    "memory-orm": "^0.3.0",
    "normalize-url": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "nuxt": "^2.6.1",
    "tiny-cookie": "^2.3.1",
    "vue-kawaii": "^0.1.2",
    "vue-petit-store": "^0.6.2",
    "vue-toasted": "^1.1.26"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.3",
    "coffee-loader": "^0.9.0",
    "coffeescript": "^2.4.0",
    "html-loader": "^0.5.5",
    "jest": "^24.7.1",
    "json-loader": "^0.5.7",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.10",
    "pug": "^2.0.3",
    "pug-jest": "^1.0.1",
    "pug-plain-loader": "^1.0.0",
    "quill": "^2.0.0-dev.3",
    "quill-mention": "^2.1.1",
    "sass-loader": "^7.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "ts-loader": "^5.3.3",
    "typescript": "^3.4.2",
    "vue-jest": "^3.0.4",
    "webpack-cli": "^3.3.0",
    "yaml-jest": "^1.0.5",
    "yaml-loader": "^0.5.0"
  }
}
