[title]:after
  content: attr(title)

[data-tooltip]:after
  content: attr(data-tooltip)

[title]
[data-tooltip]
  position: relative

  &:after
    z-index: 99998

  &:before
    z-index: 99999

  &:after
  &:before
    // Position
    position: absolute

    // Hide it by default
    display: none
    opacity: 0
    height: 0
    overflow: visible

  &:after
    // Content
    height: auto
    text-align: left
    white-space: pre
    font-style: normal
    font-weight: normal
    border-radius: 8px
    padding: 5px

  &:before
    content: ''
    width: 0
    height: 0
    border-color: transparent
    border-radius: 6px

[title]
.tooltip-bottom
.tooltip-right
.tooltip-left
.tooltip-top
  &.tap
  &:hover
  &:focus
    &:after
      display: block
      opacity: 1
      border: 0.5px solid
    &:before
      display: block
      opacity: 1
      border: 6px solid

  &:has(:focus)
    &:after
      display: block
      opacity: 1
      border: 0.5px solid
    &:before
      display: block
      opacity: 1
      border: 6px solid

// Bottom
.tooltip-bottom
  &:after
  &:before
    top: 85%
    left: 0
    margin-top: 12px
  &:before
    margin-top:  6px
    left: 15px

// Top
[title]
.tooltip-top
  &:after
  &:before
    top: auto
    bottom: 85%
    left: 0
    margin-bottom: 12px
  &:before
    margin-bottom:  6px
    left: 15px

// Right
.tooltip-right
  &:after
  &:before
    left: 100%
    margin-left: 6px
    margin-top: 0
    top: 0
  &:before
    margin-left: 0
    left: 100%
    top: 7px

// Left
.tooltip-left
  &:after
  &:before
    right: 100%
    margin-right: 6px
    left: auto
    margin-top: 0
    top: 0
  &:before
    margin-right: 0
    right: 100%
    top: 7px
