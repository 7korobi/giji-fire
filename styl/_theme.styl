  if white == $backT
    $bold = HSLA(key,99%,15%,1)
    $bg   = HSLA(key,12%,60%,1)
    $edge = HSLA(key,20%,40%,1)

  if light == $backT
    $bold = HSLA(key,66%,15%,1)
    $bg   = HSLA(key,35%,66%,1)
    $edge = HSLA(key,66%,40%,1)


  if metal == $backT
    $bold = HSLA(key,40%,85%,1)
