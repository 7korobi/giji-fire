    [title]
    [data-tooltip]
      body &.{theme}:before
      .{theme} &:before
      body &.{theme}:after
      .{theme} &:after
        text-shadow: none
        color: $pen
        background-color: $bgHi

    .bar
      body &.{theme}
      .{theme} &
        text-shadow: none
        color: $emboss
        background-color: $bg

    input[type=submit]
    input[type=button]
    button
    .btn
    [href]
      body &.{theme}
      .{theme} &
        color: $pen
        border-color:     $off
        background-color: $off

        &:link
          color: $pen

        &.visited
        &:visited
          color: $pen

        &.contain
          color: $bold

        &.hover
        &:hover
        &:focus
          border-color:  $focus

        &.nuxt-link-exact-active
        &.active
        &:active
        &:checked
          background-color: $on

    .btn
