Pr = 0.298912
Pg = 0.586611
Pb = 0.114478

// https://qiita.com/lookman/items/d518f16c897c94bc4e78
Y2L(HH,SS,YY)
  hueblock = unit(floor( HH / 60 ), '')

  a = unit(HH % 60, '') / 60
  if 0 == hueblock
    Yp = Pr + Pg * a
  if 1 == hueblock
    a = 1 - a
    Yp = Pg + Pr * a
  if 2 == hueblock
    Yp = Pg + Pb * a
  if 3 == hueblock
    a = 1 - a
    Yp = Pb + Pg * a
  if 4 == hueblock
    Yp = Pb + Pr * a
  if 5 == hueblock
    a = 1 - a
    Yp = Pr + Pb * a

  Y = 0.01 * unit(YY,'')
  S = 0.01 * unit(SS,'')
  C = 2 * S * (0.5 - Yp)
  if Y > (1 - C) / 2
    L = (Y + C) / (1 + C)
  else
    L = Y / (1 - C)
  LL = 100% * L

HSYA(HH,SS,YY,AA = 1)
  HH = HH % 360
  LL = Y2L(HH,SS,YY)
  hsla(HH,SS,LL,AA)

fix(col, SS, LL)
  lighten( saturate( col, SS ), LL )

Glowing(a, blur, col)
  b = 0 - a
  text-shadow: 0 0 0.5px col, a a blur col, 0 a blur col, b a blur col, a 0 blur col, b 0 blur col, a b blur col, 0 b blur col, b b blur col

Marker(size, col)
  background: linear-gradient(transparent size, col 0)


