  if snow == $backT
    $bold = HSLA(key,99%,15%,1)
    $bg   = HSLA(key,12%,80%,1)
    $edge = HSLA(key,20%,60%,1)

  if pastel == $backT
    $bold = HSLA(key,40%,15%,1)
    $bg   = HSLA(key,75%,88%,1)
