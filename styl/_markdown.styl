// SVG section
rect.move
.move > rect
  stroke-width: 1px
  fill: none

rect.cluster
.cluster > rect
  stroke-width: 3px
  fill: none

rect.icon
.icon > rect

rect.point
.point > rect
  fill: none
  stroke: none

rect.box
.box > rect
  fill: black
  stroke: black

.edgePath
  > path.path
    fill: none
    &.hide
      stroke: none
      stroke-width: 0
    &.wide
      stroke-width: 6px
    &.solid
      stroke-width: 3px
    &.dotted
      stroke-width: 3px
      stroke-dasharray: 3px, 6px

#svg-marker-arrow-end > path
#svg-marker-arrow-start > path
  stroke-width: 1px
  stroke-dasharray: 1px, 0
#svg-marker-cross > path
  stroke-width: 2px
  stroke-dasharray: 1px, 0
