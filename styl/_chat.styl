.chat
  padding: 0 4px 0 8px

  .date
    text-align: right

  .name, .text, .date
    padding: 0
    margin: 0

  .text
    white-space: pre-wrap
    overflow: visible
    &.mono
      white-space: pre
      font-family: monospace
      overflow-y: visible
      overflow-x: auto
      text-overflow: show
      background: url("//s3-ap-northeast-1.amazonaws.com/giji-assets/images/bg/grid.gif")

  textarea
    width: 99%
    min-width: 99%
    max-width: 99%
    border-width: 1px
    border-style: solid
    resize: vertical
    overflow-y: auto
    overflow-x: scroll
    -ms-overflow-style: none
    &::-webkit-scrollbar
      display:none;

