.banner
  position: relative

width($font, $center)
  $gap = 24px
  $limit1 = $center / 0.9
  $limit2 = $center + 2 * ( $gap +  80px )
  $limit3 = $center + 2 * ( $gap + 150px )
  $half   = ( $center + $gap ) / 2

  @media screen and (min-width: $limit3)
    .summaryframe
      width: "calc( 50vw - %s )" % $half
  @media screen and (max-width: $limit3)
    .summaryframe
      width: 150px

  @media screen and (min-width: $limit2)
    .banner
      left:  $center + 15px
      width: "calc( 50vw - %s )" % ($half + 6px)
    .toastframe
    .sideframe
      width: "calc( 50vw - %s )" % $half
  @media screen and (max-width: $limit2)
    .banner
      display: none
    .toastframe
    .sideframe
      width: 80px

  @media screen and (min-width: $limit1)
    .writeframe
    .outframe
      .contentframe
        width: $center
        margin: 0 auto

  @media screen and (max-width: $limit1)
    .writeframe
    .outframe
      .contentframe
        margin: 0 5%
